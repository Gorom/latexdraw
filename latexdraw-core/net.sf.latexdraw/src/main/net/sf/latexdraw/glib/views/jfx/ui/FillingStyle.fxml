<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<TitledPane fx:id="mainPane" animated="true" text="Filling" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
			fx:controller="net.sf.latexdraw.instruments.ShapeFillingCustomiser">
   	<tooltip><Tooltip text="%PropBuilder.12" /></tooltip>
	<content>
		<VBox spacing="5">
		   <children>
		      <ComboBox fx:id="fillStyleCB" editable="false" prefHeight="25.0" prefWidth="90.0">
		      	<tooltip><Tooltip text="Set how the shape is filled." /></tooltip>
		      </ComboBox>
		      <AnchorPane fx:id="fillPane">
			      <ColorPicker fx:id="fillColButton" layoutX="87.0" layoutY="0.0" prefHeight="25.0" prefWidth="100.0">
			     	<tooltip><Tooltip text="%LaTeXDrawFrame.68" /></tooltip>
			      </ColorPicker>
			      <Label layoutX="0.0" layoutY="5.0" text="%LaTeXDrawFrame.48" />
		      </AnchorPane>
		      <AnchorPane fx:id="hatchingsPane">
			      <ColorPicker fx:id="hatchColButton" layoutX="87.0" layoutY="0.0" prefHeight="25.0" prefWidth="100.0">
			     	<tooltip><Tooltip text="%LaTeXDrawFrame.69" /></tooltip>
			      </ColorPicker>
		   	      <Label layoutX="0.0" layoutY="5.0" text="%LaTeXDrawFrame.49" />
			      <TextField fx:id="hatchSepField" layoutX="85.0" layoutY="65.0" prefHeight="25.0" prefWidth="90.0">
