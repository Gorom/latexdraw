<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<TitledPane xmlns:fx="http://javafx.com/fxml/1" fx:id="linePane" animated="true" text="Line" xmlns="http://javafx.com/javafx/8"
            fx:controller="net.sf.latexdraw.instruments.ShapeBorderCustomiser">
    <tooltip>
        <Tooltip text="%PropBuilder.15"/>
    </tooltip>
    <AnchorPane>
        <Spinner fx:id="thicknessField" layoutX="43.0" layoutY="4.0" prefHeight="25.0" prefWidth="75.0"
                 min="0.1" max="1000" initialValue="2" amountToStepBy="0.1">
            <tooltip>
                <Tooltip text="%LaTeXDrawFrame.65"/>
            </tooltip>
        </Spinner>
        <ComboBox fx:id="lineCB" layoutX="13.0" layoutY="104.0" prefHeight="25.0" prefWidth="90.0" editable="false">
            <tooltip>
                <Tooltip text="Set the style of the lines."/>
            </tooltip>
        </ComboBox>
        <ColorPicker fx:id="lineColButton" layoutX="13.0" layoutY="37.0" prefHeight="25.0" prefWidth="90.0">
            <tooltip>
                <Tooltip text="%LaTeXDrawFrame.66"/>
            </tooltip>
        </ColorPicker>
        <ImageView fx:id="thicknessPic" layoutX="14.0" layoutY="6.0">
            <Image url="@/res/thickness.png"/>
        </ImageView>
        <ComboBox fx:id="bordersPosCB" layoutX="110.0" layoutY="104.0" prefHeight="25.0" prefWidth="90.0" editable="false">
            <tooltip>
                <Tooltip text="%LaTeXDrawFrame.77"/>
            </tooltip>
        </ComboBox>
        <Spinner fx:id="frameArcField" layoutX="43.0" layoutY="70.0" prefHeight="25.0" prefWidth="75.0"
                 min="0" max="1" initialValue="0" amountToStepBy="0.05">
            <tooltip>
                <Tooltip text="Set the roundness of line angles."/>
            </tooltip>
        </Spinner>
        <ImageView fx:id="frameArcPic" layoutX="14.0" layoutY="72.0">
            <Image url="@/res/roundness.png"/>
        </ImageView>
        <CheckBox fx:id="showPoints" layoutX="14.0" layoutY="138.0" text="%ShapeBord.2">
            <tooltip>
                <Tooltip text="%ShapeBord.3"/>
            </tooltip>
        </CheckBox>
    </AnchorPane>
</TitledPane>

