			      </TextField>
			      <Label layoutX="0.0" layoutY="70.0" text="%AbstractParametersFrame.0" />
			      <TextField fx:id="hatchAngleField" layoutX="85.0" layoutY="33.0" prefHeight="25.0" prefWidth="90.0">
			      	<tooltip><Tooltip text="Set the angle of the hatchings." /></tooltip>
			      </TextField>
			      <Label layoutX="0.0" layoutY="38.0" text="%ShapeFill.1" />
			      <TextField fx:id="hatchWidthField" layoutX="85.0" layoutY="98.0" prefHeight="25.0" prefWidth="90.0">
			      	<tooltip><Tooltip text="Set the size of the hatchings." /></tooltip>
			      </TextField>
			      <Label layoutX="0.0" layoutY="103.0" text="Width:" />
		      </AnchorPane>
		      <AnchorPane fx:id="gradientPane" >
			      <ColorPicker layoutX="87.0" layoutY="0.0" prefHeight="25.0" prefWidth="100.0">
			     	<tooltip><Tooltip text="%LaTeXDrawFrame.grad1" /></tooltip>
			      </ColorPicker>
			      <Label layoutX="0.0" layoutY="5.0" text="%LaTeXDrawFrame.1b" />
			      <ColorPicker fx:id="gradEndColButton" layoutX="87.0" layoutY="30.0" prefHeight="25.0" prefWidth="100.0">
