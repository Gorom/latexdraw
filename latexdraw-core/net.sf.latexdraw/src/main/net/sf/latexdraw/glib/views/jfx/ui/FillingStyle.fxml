			      </ColorPicker>
			      <Label layoutX="0.0" layoutY="35.0" text="%LaTeXDrawFrame.2" />
			      <TextField fx:id="gradMidPtField" layoutX="87.0" layoutY="60.0" prefHeight="25.0" prefWidth="90.0">
			      	<tooltip><Tooltip text="Set the middle point of the gradient." /></tooltip>
			      </TextField>
			      <Label layoutX="0.0" layoutY="65.0" text="%AbstractParametersFrame.4" />
			      <TextField fx:id="gradAngleField" layoutX="87.0" layoutY="90.0" prefHeight="25.0" prefWidth="90.0">
			      	<tooltip><Tooltip text="Set the angle of the gradient." /></tooltip>
			      </TextField>
			      <Label layoutX="0.0" layoutY="95.0" text="%ShapeFill.1" />
		      </AnchorPane>
		   </children>
		</VBox>
	</content>
</TitledPane>
